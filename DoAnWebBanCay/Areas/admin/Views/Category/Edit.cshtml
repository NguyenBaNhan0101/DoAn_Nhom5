@model DoAnWebBanCay.Models.LoaiCay
@{
    ViewBag.Title = "Cập nhật danh mục";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/cssadmin.css" rel="stylesheet" />
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/admin/Home/Index">Trang chủ</a></li>
                    <li class="breadcrumb-item active"><a href="/admin/Cay/DSCay">Danh sách danh mục</a></li>
                    <li class="breadcrumb-item active">Cập nhật danh mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin danh mục</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()

                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label>Tên cây</label>
                            @Html.TextBoxFor(model => model.TenLoai, new { @class = "form-control", @placeholder = "Tên cây" })
                            @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
                        </div>
                        <a href="~/admin/Category/DSDanhMuc" class="btn btn-danger">Quay lại</a>
                        <button type="submit" value="Create" class="btn btn-primary">Lưu</button>
                    </div>

                }
                <!-- your steps content here -->
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>

