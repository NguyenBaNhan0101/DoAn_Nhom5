@model DoAnWebBanCay.Models.DonHang
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label>Mã đơn hàng</label>
                    <p class="form-control">@Model.MaDonHang</p>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email/Tài Khoản</label>
                        <p class="form-control">@Model.UserName</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control">@Model.Email</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>SĐT</label>
                        <p class="form-control">@Model.Number</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số lượng sản phẩm</label>
                        <p class="form-control">@Model.SoLuong</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tổng tiền</label>
                        <p class="form-control">@String.Format("{0:0,0}", @Model.TongThanh) ₫</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày Đặt</label>
                        <p class="form-control">@Model.NgayDat</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tình trạng</label>
                        <p class="form-control">@Model.TrangThai</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h3>Danh sách sản phẩm</h3>
                </div>
                <div class="col-12">
                    @Html.Action("Partial_SP", "Order", new { id = @Model.MaDonHang })
                </div>
            </div>
            <a href="~/Order/DSDH" class="btn btn-danger">Quay lại</a>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
